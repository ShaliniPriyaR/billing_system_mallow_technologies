<div id="<%= dom_id product %>">
  <div>
    <strong>Name:</strong>
    <%= product.name %>
  </div>

  <div>
    <strong>Product code:</strong>
    <%= product.product_code %>
  </div>

  <div>
    <strong>Stock available:</strong>
    <%= product.stock_available %>
  </div>

  <div>
    <strong>Unit price:</strong>
    <%= product.unit_price %>
  </div>

  <div>
    <strong>Tax percentage:</strong>
    <%= product.tax_percentage %>
  </div>

</div>
